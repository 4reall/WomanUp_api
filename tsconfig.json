{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "typeRoots": [
        "./src/types", "./node_modules/@types"]
  },
  "include": [
      "src/**/*"
  ]
}
